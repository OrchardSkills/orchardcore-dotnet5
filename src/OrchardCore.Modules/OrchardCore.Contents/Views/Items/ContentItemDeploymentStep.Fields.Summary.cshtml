@model ShapeViewModel<ContentItemDeploymentStep>
@inject OrchardCore.ContentManagement.IContentManager ContentManager

@{
    ContentItem contentItem = null;
    if (!String.IsNullOrEmpty(Model.Value.ContentItemId))
    {
        contentItem = await ContentManager.GetAsync(Model.Value.ContentItemId);
    }
}

<h5>@T["Content Item"]</h5>
@if (contentItem != null)
{
    <span class="badge badge-info">@contentItem.ToString()</span>
}
else
{
    <span class="badge badge-warning">@T["Nothing here!"]</span>
}
